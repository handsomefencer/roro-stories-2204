  site:
    image: nginx:stable-alpine
    container_name: laravel_site
    hostname: 'laravel.dev.test'
    ports:
      - 80:80
      - 443:443
    volumes:
      - ./:/var/www/html
      - ./docker/default.conf:/etc/nginx/conf.d/default.conf
    depends_on:
      - php
      - postgres
      - redis
    networks:
      - laravel